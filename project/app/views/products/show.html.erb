<p id="notice"><%= notice %></p>

<p>
  <strong>名称:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>描述:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>分类:</strong>
  <%= @product.ptype.name if @product.ptype %>
</p>

<%= link_to '编辑', edit_product_path(@product) %> |
<%= link_to '返回', products_path %>

<h2>评论</h2>
<div id="comments">
<%= render :partial => @product.comments %>
</div>
<%= form_for [@product, Comment.new] do |f| %>
  <p>
    <%= f.label :content, "留言区" %> <br />
    <%= f.text_area :content, :rows => 5 %>
  </p>
  <p><%= f.submit "发表评论" %></p>
<% end %>

